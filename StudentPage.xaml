    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:MauiApp1.ViewModel"
    Title="StudentPage"
    BindingContext="{Binding Source={RelativeSource Mode=Self}, Path=DefaultViewModel}">



    <StackLayout Margin="0,50">
