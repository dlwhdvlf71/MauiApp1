        <HorizontalStackLayout HorizontalOptions="Center">
            <Label Text="나이" VerticalOptions="Center" />
            <Entry
                MinimumWidthRequest="150"
                Placeholder="Input Name"
                WidthRequest="200" />
        </HorizontalStackLayout>



