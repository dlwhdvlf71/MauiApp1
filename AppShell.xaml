<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:flyout="clr-namespace:MauiApp1.FlyoutNavigation.Pages"
    xmlns:local="clr-namespace:MauiApp1"
    FlyoutIcon="dotnet_bot.svg">

    <Shell.FlyoutHeader>
        <Grid BackgroundColor="DarkSlateBlue" HeightRequest="100">
            <Label Text="Main By Header" />
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Main By Item">
        <ShellContent
            Title="Main Page"
            ContentTemplate="{DataTemplate flyout:MainPage}"
            Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="First By Item">
        <ShellContent
            Title="First Page"
            ContentTemplate="{DataTemplate flyout:FirstPage}"
            Route="FirstPage" />
    </FlyoutItem>

    <FlyoutItem Title="Second By Item">
        <ShellContent
            Title="Second Page"
            ContentTemplate="{DataTemplate flyout:SecondPage}"
            Route="SecondPage" />
    </FlyoutItem>

