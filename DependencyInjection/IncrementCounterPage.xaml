<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiApp1.DependencyInjection.IncrementCounterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:di="clr-namespace:MauiApp1.DependencyInjection"
    Title="IncrementCounterPage">

    <VerticalStackLayout>
        <Label Text="{Binding Counter, Mode=OneWay}" />
        <Button Command="{Binding IncrementCounterCommand}" Text="Click Me!!! - Counter" />
        <Button Command="{Binding ChangeMessageCommand}" Text="Change Message!!!" />
    </VerticalStackLayout>
</ContentPage>