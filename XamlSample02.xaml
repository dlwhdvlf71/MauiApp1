<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiApp1.XamlSample02"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:app="clr-namespace:MauiApp1"
    Title="XamlSample02">

    <ContentPage.Resources>
        <ResourceDictionary />
    </ContentPage.Resources>

    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Style="{StaticResource infoLabeStyle}"
            Text="Welcome to XamlSample02!" />

        <Label
            HorizontalOptions="Center"
            Style="{StaticResource infoLabeStyle}"
            Text="Welcome to XamlSample02! - test" />

        <Button
            BackgroundColor="{DynamicResource bgColor}"
            Clicked="OnLight_Clicked"
            Text="Light" />
        <Button
            BackgroundColor="{DynamicResource bgColor}"
            Clicked="OnDark_Clicked"
            Text="Dark" />
    </VerticalStackLayout>
</ContentPage>